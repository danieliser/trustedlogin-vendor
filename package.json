{
  "name": "@trustedlogin/trustedlogin-vendor",
  "private": true,
  "version": "0.1.0",
  "license": "GPL-2.0-or-later",
  "main": "build/index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "wp-scripts test-unit-js",
    "build:js": "wp-scripts build",
    "build": "npm run build:js && npm run build:css",
    "start": "npm run run-p start:js --watch start:css",
    "test:ci": "wp-scripts test-unit-js --ci",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "prettier ./admin --write",
    "lint": "prettier ./admin --write",
    "start:js": "wp-scripts start",
    "start:css": "npm run tailwindcss -i ./admin/tailwind.css -o ./admin/trustedlogin-dist.css --watch",
    "build:css": "NODE_ENV=production TAILWIND_MODE=build npm run tailwindcss -i ./admin/tailwind.css -o ./admin/trustedlogin-dist.css"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@testing-library/react": "^12",
    "@wordpress/scripts": "^16",
    "prettier": "2.5.1"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@imaginary-machines/wp-admin-components": "^0.3.2",
    "@tailwindcss/forms": "^0.4.0",
    "@wordpress/element": "^3",
    "@wordpress/i18n": "^4",
    "autoprefixer": "^10.4.2",
    "dotenv": "^14.3.2",
    "multiselect-react-dropdown": "^2.0.7",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "shelljs": "^0.8.5",
    "tailwindcss": "^3.0.15"
  }
}
