{
    "name": "trustedlogin/trustedlogin-vendor",
    "description": "TrustedLogin Vendor Plugin",
    "require": {
        "php": "^7.2|^8.0",
        "paragonie/sodium_compat": "^1.17"
    },
    "type": "wordpress-plugin",
    "autoload": {
        "psr-4": {
            "TrustedLogin\\Vendor\\": "./php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TrustedLogin\\Vendor\\Tests\\": "./tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "yoast/phpunit-polyfills": "^1.0.1",
        "mockery/mockery": "1.2",
        "brain/monkey": "2.*",
        "vlucas/phpdotenv": "^5.4",
        "symplify/easy-coding-standard": "^10.0"
    },
    "scripts": {
        "test": "composer test:wordpress",
        "test:wordpress": "`phpunit --config=phpunit-integration.xml`",
        "sniffs": "vendor/bin/ecs check",
        "fixes": "vendor/bin/ecs check --fix"
    }
}
